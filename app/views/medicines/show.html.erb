  <!-- Medicine Table -->
<div class="container fluid">
  <h1>Medicine</h1>
  <div class="row">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Quantity</th>
          <th>Price</th>
          <th>Manufacturing Date</th>
          <th>Medicine Expiry Date</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>
    <tbody>
      <tr>
        <td><%= @medicine.name %></td>
        <td><%= @medicine.description %></td>
        <td><%= @medicine.quantity %></td>
        <td><%= @medicine.price %></td>
        <td><%= @medicine.manfucturing_date %></td>
        <td><%= @medicine.expiry_date %></td>
        <td><%= link_to "Edit", edit_medicine_url, class: "btn btn-warning float-right"%></td>
        <td><%= button_to 'Delete', medicine_path, class: "btn btn-danger float-right", method: 'delete' %></td>
        <td><%= link_to 'Download', medicine_path(format: :pdf), class: "btn btn-secondary float-right" %></td>
      </tr>
    </tbody>
    </table>
  </div>
    <%= link_to "Add New Medicine", new_medicine_path, class: "btn btn-primary" %>
</div>
