<div class="modal-header">
  <h4 class="modal-title" id="myModalLabel">Courier Details</h4>
</div>

<%= simple_form_for (Courier.new) do |f| %>
  <div class="modal-body">
    <div class="mb-3">
      <%= f.label :name, { class: "form-label"} %>
      <%= f.text_field :name, { class: "form-control", placeholder: "Courier Name" } %>
    </div>

    <div class="mb-3">
      <%= f.label :address, { class: "form-label"} %>
      <%= f.text_field :address, { class: "form-control", placeholder: "Courier Address" } %>
    </div>

    <div class="mb-3">
      <%= f.label :code, { class: "form-label"} %>
      <%= f.text_field :code, { class: "form-control", placeholder: "Courier Code" } %>
    </div>

    <div class="mb-3">
      <%= f.label :contact_no, { class: "form-label"} %>
      <%= f.text_field :contact_no, { class: "form-control", placeholder: "Courier Contact Number" } %>
    </div>
  </div>
  <div class="modal-footer">
    <%= f.submit "Save",:remote => true, class: "btn btn-primary" %>
  </div>
<% end %>

