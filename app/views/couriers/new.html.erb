  <!-- Courier Form-->
<div class="form-group">
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-4">
        <div class="card">
          <div class="card-body">

            <%= simple_form_for @courier do |f| %>
              <%= f.error_notification %>
              <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
   
              <h2> Courier Details </h2>
              <div class="mb-3">
                <%= f.label :name, { class: "form-label"} %>
                <%= f.text_field :name, { class: "form-control", placeholder: "Courier Name" } %>
              </div>

              <div class="mb-3">
                <%= f.label :address, { class: "form-label"} %>
                <%= f.text_field :address, { class: "form-control", placeholder: "Courier Address" } %>
              </div>

              <div class="mb-3">
                <%= f.label :code, { class: "form-label"} %>
                <%= f.text_field :code, { class: "form-control", placeholder: "Courier Code" } %>
              </div>

              <div class="mb-3">
                <%= f.label :contact_no, { class: "form-label"} %>
                <%= f.text_field :contact_no, { class: "form-control", placeholder: "Courier Contact Number" } %>
              </div>

              <div class="mb-3">
                <div><br><%= f.submit "Save", class: "btn btn-primary" %></div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

