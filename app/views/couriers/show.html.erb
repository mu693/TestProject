  <!-- Courier Table -->
<div class="container fluid">
  <h1>Courier</h1>
  <div class="row">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Courier Name</th>
          <th>Courier Address</th>
          <th>Courier Code</th>
          <th>Courier Contact Number</th>
          <th colspan="2">Actions</th>
        </tr>
      </thead>
    <tbody>
      <tr>
        <td><%= @courier.name %></td>
        <td><%= @courier.address %></td>
        <td><%= @courier.code %></td>
        <td><%= @courier.contact_no %></td>
        <td><%= link_to "Edit", edit_courier_url, class: "btn btn-warning float-right"%></td>
        <td><%= button_to 'Delete', courier_path, class: "btn btn-danger float-right", method: 'delete' %></td>
      </tr>
    </tbody>
    </table>
  </div>
    <%= link_to "Add New Courier", new_disease_path, class: "btn btn-primary" %>
</div>
