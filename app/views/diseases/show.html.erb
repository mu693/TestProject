  <!-- Disease Table -->

  
<div class="container fluid">
  <h1>Disease</h1>
  <div class="row">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Disease name</th>
          <th>Disease code</th>
          <th>Disease status</th>
          <th>Medicine</th>
          <th>Doctor</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>
    <tbody>
      <tr>
        <td><%= @disease.name %></td>
        <td><%= @disease.code %></td>
        <td><%= @disease.status %></td>
        <td>
          <% @disease.medicines&.each do |m| %>
            <%= m.name %><%=  (m == @disease.medicines&.last) ? "" : "," %>
          <% end %>
        </td>
        <td>
          <% @disease.doctors&.each do |d| %>
            <%= d.name %><%=  (d == @disease.doctors&.last) ? "" : "," %>
          <% end %>
        </td>
        <td><td><%= link_to "Edit", edit_disease_url, class: "btn btn-warning float-right"%></td></td>
        <td><%= button_to 'Delete', disease_path, class: "btn btn-danger float-right", method: 'delete' %></td>
        <td><%= link_to 'Download', disease_path(format: :pdf), class: "btn btn-secondary float-right" %></td>
      </tr>
    </tbody>
    </table>
  </div>
    <%= link_to "Add New Disease", new_disease_path, class: "btn btn-primary" %>
</div>
