<div class="container-fluid text-center">
  <div class="row justify-content-center">
    <h2>Appointment Record</h2>
    <div class="mt-3 appointment-btn">
      <% if current_user.patient? %>
        <%= link_to "New Appointment", new_patient_appointment_path, class: "btn btn-primary" %>
        <%= link_to "History", history_patient_appointments_path, class: "btn btn-secondary" %>
      <% end %>
      </div>
    <div class="col-4">
      <div class="card">
        <div class="card-body">
          <% @patient_appointments.each do |patient_appointment| %>
            <div class="mb-3">
              <strong> Appointment_Date: </strong>
              <%= patient_appointment.date.strftime("%d/%m/%Y") %><br />
              <div class="btn-group">
                <% if current_user.patient? %>
                  <%= button_to 'Cancel', patient_appointment_path(patient_appointment), class: "btn btn-danger", method: 'delete' %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
