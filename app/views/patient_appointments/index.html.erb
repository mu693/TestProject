<div class="container mt-5 text-center">
  <div class="col-5">
  <h2>Appointment</h2>
  <% if current_user.avatar.present? %>
    <%= image_tag(current_user.avatar, width: 100, height: 100) %>
  <% else %>
    <h5>No Image</h5>
  <% end %>
    <p><b>First Name: </b><%= current_user.name %></p>
    <p><b>Last Name: </b><%= current_user.lname %></p>
    <p><b>Email: </b><%= current_user.email %></p> 
    <br />
    <%= simple_form_for(@patient_appointment) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
       <div id="container">   
      <div class="mb-3">
        <legend>Doctors:</legend>
        <%= f.association :doctor, 
          label_method: lambda { |doctor| "#{doctor.name} - #{doctor.description} "},
          :label => "Select Docotrs:",
          as: :select, 
          input_html: { class: "value-selector" },
          item_wrapper_class: 'value-item select-2'
        %>
      </div>

      <%= month_calendar(events: @appointment_dates) do |date, appointment_dates| %>
        <div class="day">
          <%= date.day %>
        </div>
        <% appointment_dates.each do |appointment_date| %>
          <div class="card-header">
            <div class="card-title">
              <%= link_to appointment_date.doctor.name, appointment_date %>
            </div>
          </div> 
        <% end %>     
      <% end %>    
    <% end %>
    </div>
  </div>
</div>
