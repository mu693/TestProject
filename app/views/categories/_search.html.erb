<div class="row float-right">
  <div class="col-md-12 bg-light text-right id=search-form">
    <p>Search:</p>
    <%= form_tag(categories_path, method: "get", remote: true) do %>
      <%= text_field_tag :search, params[:search], autocomplete: "off" , placeholder: "Enter Category name", class: "form-control" %>
    <% end %>

     <div id="index">
      <%= render 'categories/results' %>
    </div>    
  </div>
</div>
