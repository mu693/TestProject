<div class="form-group">
  <div class="container-fluid text-center">
    <div class="row justify-content-center">
      <div class="col-4">
      <h2>Doctor Appointment Date</h2>
        <div class="card">
          <div class="card-body">
            <strong> Doctor Name:</strong>
            <%= @appointment_date.doctor.name %><br>
            <strong> Date:</strong>
            <%= @appointment_date.start_time.strftime("%d/%m/%Y") %><br>
            <strong> Availability:</strong>
            <%= @appointment_date.start_time.strftime("%I:%M %p") %>
            <strong> To </strong>
            <%= @appointment_date.end_time.strftime("%I:%M %p") %>
            <div class="btn-group">
              <%= link_to "Edit", edit_appointment_date_url, class: "btn btn-warning editdate"%>
              <%= button_to 'Delete', appointment_date_path, class: "btn btn-danger", method: 'delete' %>
            </div>
          </div>
        </div>
        <div class="mt-3">
          <%= link_to 'Back', url_for(:back), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>