     <!--All Users-->
<div class="container">
  <div class="row row-cols-1 row-cols-md-3">
    <%- @users.each do |user| %>
      <div class="col mb-4">
        <div class="col-9">
          <div class="card h-100">
            <div class="card-body">
              <% if user.avatar.present? %>
                <%= image_tag(user.avatar, width: 100, height: 100) %>
              <% else %>
                <h5>No Image</h5>
              <% end %>
              <br />
              <h6>ID:   <%= user.id %></h6>
              <h6>First Name:   <%= user.name %></h6>
              <h6>Last Name:   <%= user.lname %></h6>
              <h6>Email:   <%= user.email %></h6>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>